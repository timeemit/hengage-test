%h1 Users

%p= link_to 'Make a New User', new_user_path

%p= paginate @users 

%table
	%tr
		%th Email
		%th Admin?
		%th
		%th
	- @users.each do |user|
		%tr 
			%td= user.email
			%td= user.admin ? 'Aye!' : 'Nay!'
			%td= link_to 'View', user_path(user)
			- if current_user.admin?
				%td= link_to 'Edit', edit_user_path(user)
			
%p= paginate @users 

- if current_user.admin?
	%p= link_to 'Make a New User', new_user_path
